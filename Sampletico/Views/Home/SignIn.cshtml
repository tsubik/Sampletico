@model Sampletico.ViewModels.SignInViewModel

<div class="container" style="margin-top: 30px">
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><strong>Sign in </strong></h3>
            </div>
            <div class="panel-body">
                @using(Html.BeginDataForm())
                {
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email</label>
                        @Html.TextBoxFor(m=> m.Login, new { type="email", @class="form-control", id="exampleInputEmail1", placeholder="Enter email" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password <a href="/sessions/forgot_password">(forgot password)</a></label>
                        @Html.TextBoxFor(m=> m.Password, new { type="password", @class="form-control", style="border-radius: 0px", id="exampleInputPassword1", placeholder="Password"})
                    </div>
                    <button type="submit" class="btn btn-sm btn-default">Sign in</button>
                }
            </div>
        </div>
    </div>
</div>
